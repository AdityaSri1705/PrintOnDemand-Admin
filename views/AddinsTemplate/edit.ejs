<%- contentFor('HeaderCss') %>

    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Addins Templates</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/admin/addins/?type_filter=<%= addin.type%>">Addins Templates</a></li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>

        <% if (message!="" ) { %>
            <div class="alert alert-success">
                <%= message  %>
            </div>
        <% } %>
        <% if (error!="") { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Edit template</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/addins/update" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="addin_type">Type <span class="text-danger">*</span></label>
                                        <select class="form-control" id="addin_type" name="addin_type" >
                                            <% typeList.forEach(addintype =>{ %>
                                                <option value="<%= addintype %>" <%= addin.type==addintype ? 'selected':'' %>><%= addintype %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="title">Title <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter title" id="title" name="title" value="<%= addin.title %>" required >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="image1">Left Image</label>
                                        <input type="file" class="form-control"  id="image1" name="image1">
                                        <% if(addin.image!="" && addin.image!=null){%> 
                                            <div class="image-container"> <div class="inner"><a href="/admin/addins/delete-image/image/<%= addin.id %>" class="delete-btn" >X</a><img src="<%= addin.image %>" width="200" /></div></div>
                                        <% }%>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="image2">Right Image</label>
                                        <input type="file" class="form-control"  id="image2" name="image2">
                                        <% if(addin.image2!="" && addin.image2!=null){%> 
                                            <div class="image-container"> <div class="inner"><a href="/admin/addins/delete-image/image2/<%= addin.id %>" class="delete-btn" >X</a><img src="<%= addin.image2 %>" width="200" /></div></div>
                                        <% }%>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="print_image1">Print Left Image</label>
                                        <input type="file" class="form-control"  id="print_image1" name="print_image1">
                                        <% if(addin.print_image!="" && addin.print_image!=null){%> 
                                            <div class="image-container"> <div class="inner"><a href="/admin/addins/delete-image/print_image/<%= addin.id %>" class="delete-btn" >X</a><img src="<%= addin.print_image %>" width="200" /></div></div>
                                        <% }%>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="addins_image2">Print Right Image</label>
                                        <input type="file" class="form-control"  id="print_image2" name="print_image2">
                                        <% if(addin.print_image2!="" && addin.print_image2!=null){%> 
                                            <div class="image-container"> <div class="inner"><a href="/admin/addins/delete-image/print_image2/<%= addin.id %>" class="delete-btn" >X</a><img src="<%= addin.print_image2 %>" width="200" /></div></div>
                                        <% }%>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6 text-left">
                                    <a href="/admin/addins/?type_filter=<%= addin.type%>" class="btn btn-secondary w-md">Back</a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <input type="hidden" id="id" name="id" value="<%= addin.id %>">
                                    <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                                </div>
                            </div>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Layout -->


    <%- contentFor('FooterJs') %>
    <%- contentFor('BottomJs') %>
    <script>
        jQuery(document).ready(function() {
            $("#isDefault").on('change', function(event){
                var status= ($(this).prop('checked'))? 'Yes':'No';
                $("#isDefaultLabel").html(status);
            });
           
        });
    </script>