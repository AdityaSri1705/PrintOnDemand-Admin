<%- contentFor('HeaderCss') %>


    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0"><%= layoutData.page+"-"+layoutData.title %> : Sections </h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/admin/layouts/?page_filter=<%= layoutData.slug %>">Layouts</a></li>
                            <li class="breadcrumb-item"><a href="/admin/layout/sections/<%= layoutData.id %>">Sections</a></li>
                            <li class="breadcrumb-item active">List</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>

        <% if (message!="" ) { %>
            <div class="alert alert-success">
                <%= message  %>
            </div>
        <% } %>
        <% if (error!="") { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0 float-start"></h4>
                        <!--<a href="/admin/layout/section/<%= layout_id %>/create" class="btn btn-warning  float-end">Add New Section</a>-->
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered border-grey table-hover mb-0">
                                <thead>
                                    <tr class="table-dark">
                                        <td>S.No.</td>  
                                        <td>Title</td>  
                                        <td>Default Value</td>
                                        <!--<td>Status</td>-->                                           
                                        <td style="width: 150px;">Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                <% if(sections.length>0){ %>
                                    <% sections.forEach( (section, index) => { %>
                                        <tr>
                                            <td><%= section.id %></td>
                                            <td><%= section.section_title %></td>
                                            <td ><%= section.default_title %></td>
                                            <!--<td>
                                                <div class="form-check form-switch form-switch-md mb-3" dir="ltr">
                                                    <input type="checkbox" class="form-check-input slide-status" id="sectionstatus" name="status" data-id="<%= section.id %>" <%= (section.status==1)? 'checked':''; %> value="active">
                                                    <label class="form-check-label" for="customSwitch1"><%= (section.status==1)? 'Active':'Inactive'; %></label>
                                                </div>  
                                            </td>-->
                                            <td>
                                                <a href="/admin/layout/section/edit/<%= section.id %>" class="btn btn-success btn-sm mr-2">Edit</a> 
                                               <!-- <a href="/admin/layout/section/delete/<%= section.id %>" id="delete-btn" class="btn btn-danger btn-sm">Delete</a>-->
                                               <% if(section.clone_section==0){ %>
                                               <a href="/admin/layout/options/<%= section.layout_id %>/?section_filter=<%= section.id %>" id="view-btn" class="btn btn-warning btn-sm ">Options</a>
                                               <% }else if(section.clone_section>0){ %><br>
                                                <%= 'Repeat Options of Section:'+section.clone_section %>
                                               <% }%>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="4"  class="text-center text-bold">Sorry. No layout section records exits!</td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>

                        <% if(totalPages>1){ %>
                        <div class="pt-3">
                            <nav class="">
                                <ul class="pagination justify-content-center">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/admin/layout/section?page=<%= i %>"><%= i %></a>
                                    </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                        <% } %>
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->


        <%- contentFor('FooterJs') %>

        

        <%- contentFor('BottomJs') %>
        <script>
            jQuery(document).ready(function() {
                $(".slide-status").on('change', function(event){
                    var status= ($(this).prop('checked'))? '1':'0';
                    var id = $(this).data('id');
                    window.location = '/admin/layout/section/status/'+id+'/'+status;
                });
            });
        </script>