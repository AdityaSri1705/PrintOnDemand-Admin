<!doctype html>
<html lang="en">

    <head>

        <meta charset="utf-8" />
        <title>Login - Admin </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="/assets/images/favicon.ico">

        <%- include ('../Partials/HeaderStyle') %>

    </head>

    <body data-layout="horizontal" data-topbar="dark">

        <div class="authentication-bg min-vh-100">
            <div class="bg-overlay"></div>
            <div class="container">
                <div class="d-flex flex-column min-vh-100 px-3 pt-4">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-lg-6 col-xl-5">
    
                           <div class="text-center mb-4">
                                <a href="/">
                                    <img src="/assets/images/logo.png" alt=""  width="400">
                                </a>
                           </div>
    
                            <div class="card">
                                <div class="card-body p-4"> 
                                    <div class="text-center mt-2">
                                        <h5 class="text-primary">Welcome Back !</h5>
                                        <p class="text-muted">Sign in to continue to <%= SiteTitle %>.</p>
                                    </div>
                                    <div class="p-2 mt-4">
                                        <% if(error.length> 0) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= error %>
                                            </div>
                                        <% } %>

                                        <% if(message.length> 0) { %>
                                            <div class="alert alert-info" role="alert">
                                                <%= message %>
                                            </div>
                                        <% } %>
                                        <form action="/post-login" method="post">
            
                                            <div class="mb-3">
                                                <label class="form-label" for="username">Email</label>
                                                <input type="text" class="form-control" id="username" name="email" placeholder="Enter username" value="<%= email %>" required>
                                            </div>
                    
                                            <div class="mb-3">
                                                <div class="float-end">
                                                    <a href="forgot-password" class="text-muted">Forgot password?</a>
                                                </div>
                                                <label class="form-label" for="userpassword">Password</label>
                                                <input type="password" class="form-control" id="userpassword" name="password" value="<%= pass %>" placeholder="Enter password" required>
                                            </div>
                    
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="auth-remember-check" name="remember_me" value="1" <% if(rememberMe){ %>checked<% }%>>
                                                <label class="form-check-label" for="auth-remember-check">Remember me</label>
                                            </div>
                                            
                                            <div class="mt-3 text-end">
                                                <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Log In</button>
                                            </div>
    
    
                              
                                        </form>
                                    </div>
                
                                </div>
                            </div>
    
                        </div><!-- end col -->
                    </div><!-- end row -->
    
    
    
                </div>
            </div><!-- end container -->
        </div>

        <%- include ('../Partials/VendorScript') %>

    </body>
</html>