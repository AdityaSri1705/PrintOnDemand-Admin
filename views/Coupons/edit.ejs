<%- contentFor('HeaderCss') %>

    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Coupon</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/admin/coupons">Coupons</a></li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>

        <% if (message!="" ) { %>
            <div class="alert alert-success">
                <%= message  %>
            </div>
        <% } %>
        <% if (error!="") { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Edit Coupon</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/coupon/update" method="post" >
                            <div class="row">
            
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="code">Code <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" placeholder="Enter code" id="code" name="code" value="<%= couponData.code %>" required >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <%
                                        const expiryDate = new Date(couponData.expiry_date);
                                        const day = expiryDate.getDate().toString().padStart(2, '0');
                                        const month = (expiryDate.getMonth() + 1).toString().padStart(2, '0'); // Note: Month is 0-based
                                        const year = expiryDate.getFullYear();
                                        const formattedDate = `${year}-${month}-${day}`;
                                        console.log(formattedDate)
                                        %>
                                        <label class="form-label" for="expiry_date">Expiry Date <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" placeholder="Enter expiry date" id="expiry_date" name="expiry_date" value="<%= formattedDate %>" required >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="discount_amount">Discount Amount </label>
                                        <input type="text" class="form-control" placeholder="Enter discount amount" id="discount_amount" name="discount_amount" value="<%= couponData.discount_amount %>" >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="discount_type">Discount Type </label>
                                        <select class="form-control" id="discount_type" name="discount_type"   >
                                            <option value="%" <%= couponData.discount_type=="%"? 'selected':''; %>>%</option>
                                            <option value="$"<%= couponData.discount_type=="$"? 'selected':''; %>>$</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="user_limit">User limit</label>
                                        <input type="text" class="form-control" placeholder="Enter user limit" id="user_limit" name="user_limit" value="<%= couponData.user_limit %>" >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="item_limit">item_limit </label>
                                        <input type="text" class="form-control" placeholder="Enter item limit" id="item_limit" name="item_limit" value="<%= couponData.item_limit %>" >
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6 text-left">
                                    <input type="hidden" id="id" name="id" value="<%=couponData.id%>">
                                    <a href="/admin/coupons" class="btn btn-secondary w-md">Back</a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                                </div>
                            </div>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Layout -->


    <%- contentFor('FooterJs') %>
    <%- contentFor('BottomJs') %>
    