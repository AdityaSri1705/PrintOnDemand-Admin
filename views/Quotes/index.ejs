<%- contentFor('HeaderCss') %>


    <%- contentFor('breadcrumb') %>

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/admin/quotes">Quotes</a></li>
                            <li class="breadcrumb-item active">List</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <%- contentFor('body') %>

        <% if (message!="" ) { %>
            <div class="alert alert-success">
                <%= message  %>
            </div>
        <% } %>
        <% if (error!="") { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 d-flex  align-items-center" >
                                
                            </div>
                            <div class="col-lg-9  col-md-6">
                                <h4 class="card-title mb-0 float-start"></h4>
                                <Box class="float-end">
                                    <a href="/admin/quote/import/" class="btn btn-warning  float-end"  style="margin-left: 10px;">Import CSV</a>
                                    <a href="/admin/quote/create/" class="btn btn-warning  float-end">Add New Quote</a>
                                </Box>
                            </div>
                        </div>
                        
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered border-grey table-hover mb-0">
                                <thead>
                                    <tr class="table-dark">
                                        <td>Quote</td> 
                                        <td>Author</td> 
                                        <td>Characters</td> 
                                        <td>Type</td> 
                                        <td>Status</td>                                            
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                <% if(quoteData.length>0){ %>
                                    <% quoteData.forEach(quote => { 
                                      
                                        %>
                                        <tr>
                                           
                                            <td><%= quote.quote_text %></td>
                                            <td><%= quote.author %></td>
                                           
                                            <td><%= quote.characters %></td>
                                            <td><%= (quote.type==1)? 'short':(quote.type==2)? 'Medium':'Long'; %></td>
                                            <td>
                                                <div class="form-check form-switch form-switch-md mb-3" dir="ltr">
                                                    <input type="checkbox" class="form-check-input slide-status" id="quotestatus" name="status" data-id="<%= quote.id %>" <%= (quote.status==1)? 'checked':''; %> value="active">
                                                    <label class="form-check-label" for="customSwitch1"><%= (quote.status==1)? 'Active':'Inactive'; %></label>
                                                </div>  
                                            </td>
                                            <td>
                                                <a href="/admin/quote/edit/<%= quote.id %>" class="btn btn-success btn-sm mr-2">Edit</a> 
                                                <a href="/admin/quote/delete/<%= quote.id %>" id="delete-btn" class="btn btn-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="5"  class="text-center text-bold">Sorry. No quote records exits!</td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>

                        <% if(totalPages>1){ %>
                        <div class="pt-3">
                            <nav class="">
                                <ul class="pagination justify-content-center">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/admin/quotes/?page=<%= i %>"><%= i %></a>
                                    </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                        <% } %>
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->


        <%- contentFor('FooterJs') %>

        

        <%- contentFor('BottomJs') %>
        <script>
            jQuery(document).ready(function() {
                $(".slide-status").on('change', function(event){
                    var status= ($(this).prop('checked'))? '1':'0';
                    var id = $(this).data('id');
                    window.location = '/admin/quote/status/'+id+'/'+status;
                });
            });
        </script>